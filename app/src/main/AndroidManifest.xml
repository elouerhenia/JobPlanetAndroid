<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tn.isamm.jobplanet">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ChoixActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".admin.MainActivityAdmin" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".recruteur.MainActivityRecruteur" />
        <activity
            android:name=".candidant.MainActivityCandidat"
            android:label="@string/title_activity_main_candidat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetailList" />
        <activity
            android:name=".candidant.MyAllExperiences"
            android:label="@string/title_activity_experience"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".candidant.Formations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".candidant.UploadCV"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".candidant.CoordonneesPersonnels"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".candidant.RegistrerCandidat"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>